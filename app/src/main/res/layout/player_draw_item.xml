<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="horizontal" android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="?android:attr/activatedBackgroundIndicator"
    android:paddingBottom="10dp"
    android:paddingTop="10dp">

    <TextView
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:text="New Text"
        android:id="@+id/playerName" />

    <TextView
        android:layout_width="50dp"
        android:layout_height="fill_parent"
        android:id="@+id/playerColour"
        android:layout_marginLeft="10dp"
        android:layout_marginStart="10dp"
        android:layout_marginRight="10dp"
        android:layout_marginEnd="10dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/currentDiceCount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/current_initial_dice_separator"
        android:id="@+id/seperatorLabel" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginRight="3dp"
        android:layout_marginEnd="3dp"
        android:id="@+id/initialDiceCount" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/dice"
        android:layout_marginRight="3dp"
        android:layout_marginEnd="3dp"
        android:id="@+id/diceCountLabel" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/pull_dice"
        android:id="@+id/pullDiceButton" />

</LinearLayout>